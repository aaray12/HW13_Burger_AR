
    <div class = "container-fluid">
        <h1>Aaron's Burgers</h1>
    </div>
    <div class = "container-fluid">
        <div class = "row">
            <div class = "col-6">
                <ul>
                
                {{burner_name}}
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                {{burger_name}}
                <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
	            Click to Eat!</button>
                </li>
                {{/unless}}
                {{/each}}
                </li>
                </ul>
            </div>
            <div class = "col-6">
                <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
                </ul>
            </div>
        </div>
        <div class = "row">
            <form class = "create-form">
                <div class="form-group">
                    <label for="userBurger">Create a Burger!</label>
                    <input type="input" class="form-control" id="userBurger" placeholder="ex. Double Butter Burger">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
